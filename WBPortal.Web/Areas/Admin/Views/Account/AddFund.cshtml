@model WBSSLStore.Domain.UserTransaction
@*<script src="@Url.Content("~/content/scripts/jquery.validate.min.js")" language="javascript" type="text/javascript" ></script>*@
@System.Web.Optimization.Scripts.Render("/bundales/wb/validationjs?v=" + ViewBag.version)
<script type="text/javascript" language="javascript">
    // starting the script on page load
    var amount = "@WBSSLStore.Resources.ErrorMessage.Message.AmountRequired";
    var validamt   = "@WBSSLStore.Resources.ErrorMessage.Message.ValidAmount"
    var recDet   = "@WBSSLStore.Resources.ErrorMessage.Message.ReceiptDetRequired"
    var amoutgrth = "@WBSSLStore.Resources.ErrorMessage.Message.AmtGreaterthanzero"
    $(document).ready(function () {
        $("#frmSetting").validate({
            rules: {
                txtAmount: {
                    required: true,
                    minlength: 1,
                    maxlength: 15,
                    number: true
                },
                txtReceiptDetails: { required: true },                
            },
            messages: {
                txtReceiptDetails: "<br/>" + recDet,
                txtAmount: {
                    //required: "Please enter Amount",                    
                    //number: "Please enter valid Amount"
                    required: amount,                    
                    number: validamt
                }
            }
        });


        $("#txtAmount").blur(function () {
          
          if(this.value)
          {
            if (!parseInt(this.value) != 0) {
                alert(amoutgrth);
                  this.value ='';
            }
           
           }
        });
        

    });
</script>
<tr>
    <td align="left" valign="top">
        <table width="881" border="0" align="left" cellpadding="0" cellspacing="0">
            <tr>
                <td width="7" align="left" valign="top">
                    <img src="@WBSSLStore.Web.Util.WBSiteSettings.AdminImagePath/barleft.gif" alt="whitebrand" width="7" height="55" />
                </td>
                <td width="866" align="left" valign="middle" class="hdbarbg">
                    <table width="840" border="0" align="center" cellpadding="1" cellspacing="1">
                        <tr>
                            <td width="407" align="left" valign="middle" class="head1">
                                @*Add Fund*@ @WBSSLStore.Resources.GeneralMessage.Message.AccSum_AddFund_Caption
                            </td>
                        </tr>
                    </table>
                </td>
                <td width="9" align="right" valign="top">
                    <img src="@WBSSLStore.Web.Util.WBSiteSettings.AdminImagePath/barright.gif" alt="whitebrand" width="9" height="55" />
                </td>
            </tr>
        </table>
    </td>
</tr>
