@model WBSSLStore.Domain.Site           
@{
    ViewBag.Title = "API";
}
<script src="@Url.Content("~/content/Admin/js/common.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/content/scripts/jquery.validate.min.js")" language="javascript" type="text/javascript" ></script>
<script type="text/javascript" language="javascript">

    $().ready(function () {
        $("#frmSetting").validate({
            rules: {
                APIUsername: "required",
                APIPassword: "required",
                txtConfirmPassword: {
                    required: true,
                    equalTo: "#APIPassword"
                },
                APIAuthToken :{
                    required: true
                }
            },
            messages: {
                APIUsername: "@WBSSLStore.Resources.ErrorMessage.Message.APIUsernameRequired",
                APIPassword: "@WBSSLStore.Resources.ErrorMessage.Message.PasswordRequired",
                txtConfirmPassword: {
                    required: "@WBSSLStore.Resources.ErrorMessage.Message.PasswordRequired",
                    equalTo: "@WBSSLStore.Resources.ErrorMessage.Message.ComparPassword"
                }
            }
        });
    });
                  
</script>
@using (Html.BeginForm("apicredential", "sitesettings", FormMethod.Post, new { id = "frmSetting" }))
{
    <!-- InstanceBeginEditable name="Content" -->
    
    <tr>
        <td align="left" valign="top">
            <table width="881" border="0" align="left" cellpadding="0" cellspacing="0">
                <tr>
                    <td width="7" align="left" valign="top">
                        <img src="@WBSSLStore.Web.Util.WBSiteSettings.AdminImagePath/barleft.gif" alt="whitebrand" width="7" height="55">
                    </td>
                    <td width="866" align="left" valign="middle" class="hdbarbg">
                        <table width="840" border="0" align="center" cellpadding="1" cellspacing="1">
                            <tr>
                                <td width="407" align="left" valign="middle" class="head1">
                                    @if (Model != null && Model.ID > 0)
                                    {
                                        <span>@WBSSLStore.Resources.GeneralMessage.Message.API_Change_Username_Password_Header
                                        </span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td width="9" align="right" valign="top">
                        <img src="@WBSSLStore.Web.Util.WBSiteSettings.AdminImagePath/barright.gif" alt="whitebrand" width="9" height="55">
                    </td>
                </tr>
            </table>
        </td>
    </tr>                    
                                   
    <tr>
        <td align="left" valign="top" class="contbg">
            <table width="600" border="0" cellpadding="0" cellspacing="0" class="bottomdashedmargin">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <tr>
                        <td colspan="3" class="normsg fontwo">
                            @Html.Raw(ViewBag.Message)
                        </td>
                    </tr>
                }
                <tr>
                    <td width="190" height="30" align="right" class="text" valign="middle">
                        <strong>@Html.LabelFor(model => model.APIPartnerCode)</strong>
                    </td>
                    <td width="10" align="right">
                        &nbsp;
                    </td>
                    <td width="400">
                        @Html.DisplayTextFor(model => model.APIPartnerCode)
                    </td>
                </tr>
               
                    <tr>
                        <td height="30" align="right" valign="middle" class="text">
                            <strong>@Html.LabelFor(model => model.APIAuthToken)<span class="redfont">*</span></strong>
                        </td>
                        <td align="right">
                            &nbsp;
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.APIAuthToken, new { @class = "inputbox" })
                            <span id="spMsg" class="redfont"></span>
                        </td>
                    </tr>
              
                <tr>
                    <td align="left">
                        &nbsp;
                    </td>
                    <td align="right">
                        &nbsp;
                    </td>
                    <td>
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td align="right" valign="top" class="text">
                        &nbsp;
                    </td>
                    <td align="right">
                        &nbsp;
                    </td>
                    <td class="text">
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td height="30" align="right" class="text">
                        &nbsp;
                    </td>
                    <td align="right">
                        &nbsp;
                    </td>
                    <td class="text">
                        <input type="submit" name="btnSubmit" id="btnSubmit" value="@WBSSLStore.Resources.GeneralMessage.Message.Submit_Btn" class="bluebtn" />
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <!-- InstanceEndEditable -->
    
}
