                                return status;
                            }
                        }
                    },
                    p7bpfxfile:
                    {
                        required:
                        {
                            depends: function (element) {
                                var status = false;
                                if (jQuery("#group_name_3").is(":checked") && jQuery("#chn_group_name_2").is(":checked")) {
                                    var status = true;
                                }
                                return status;
                            }
