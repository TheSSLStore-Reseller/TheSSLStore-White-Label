                            depends: function (element) {
                                var status = false;
                                if (jQuery("#group_name_3").is(":checked") && jQuery("#chn_group_name_2").is(":checked")) {
                                    var status = true;
                                }
                                return status;
                            }
                        }
                    }
                },
                messages: {
                    group_name: "Please select current format.",
                    chn_group_name: "Please select change format.",
                    derfile: "Please select certificate file.",
                    pfxfile: "Please select certificate file.",
                    pfxkey: "Please select private key file.",
                    pfxkeypass: "Please enter key password.",
                    pemfile: "Please select certificate file.",
                    pempfxfile: "Please select certificate file.",
                    pemkeypass: "Please enter key password.",
                    pemp7bfile: "Please select certificate file.",
                    p7bpemfile: "Please select certificate file.",
                    p7bpfxfile: "Please select certificate file.",
                    p7bpfxkey: "Please select private key file."

                },

            });
        });
        function changeOnClick() {
            jQuery('p#convert_error').html('');
            var current = jQuery('input[name="group_name"]:checked').val();
            var changeTo = jQuery('input[name="chn_group_name"]:checked').val();
            if (current == 'PEM' && changeTo == 'DER') {
                $("#DER_Form").show("fast");
