@model WBSSLStore.Service.ViewModels.StaticPageViewModel
@{
    ViewBag.Title = "SecureSiteProwithEV";  var productdetails = WBSSLStore.Web.Helpers.WBHelper.GetProductDetailRows();
    string brand = Model != null && Model.Items != null && Model.Items.FirstOrDefault().Product != null && Model.Items.FirstOrDefault().Product.Brand != null ? Model.Items.FirstOrDefault().Product.Brand.BrandName : "";
    string username = ViewBag.UserName;
}
@section headerTags{
    @Html.Partial("_renderSEO", Model != null && Model.CMSPage != null ? Model.CMSPage : new WBSSLStore.Domain.CMSPage())
}
@Html.Partial("_banner", new Tuple<string, string>("", "SSL Brands"))
<div class="content">
  <div class="wrapper">
    <div class="column3">
      <div class="mobtopcol">
        <div class="column3-2">
          <div class="prodetailswrap marzerotop"> @Html.Partial("_ProdPricing", new Tuple<List<WBSSLStore.Domain.ProductPricing>, List<WBSSLStore.Domain.ProductDetail>>(Model.Items.ToList(), productdetails.ToList())) </div>
          <div class="prodescrip marzerotop">
            <div class="prodescriptxt">
              <h2>Product Description</h2>
              <p>Comodo PCI Scanner compliance is an easy solution with HackerGuardian. It is easily manageable and scalable scanner to enterprise that allows unlimited scanning on 20 IP addresses on the exterior and inside.</p>
              <p>PCI Scanning enterprise edition helps you to secure your multiple gateways with single scanner; means if you have a large merchant, web host or payment gateways and you want PCI Compliance scanning on multiple servers, server types is large and all they have distributed networks then Comodo PCI Scanning Enterprise edition is best option for you.</p>
            </div>
          </div>
          <div id="cssmenu">
            <ul class="accordion_example">
              <li class="brand-symantec">
                <div>
                  <p>Features &amp; Benefits</p>
                  <div class="clear"></div>
                </div>
                <div>
                  <ul class="featurelist">
                    <li>Gain PCI scan compliance with network and server vulnerability scanning by a PCI Approved Scanning Vendor</li>
                    <li>Get 'Ready-to-submit' PCI compliance reports to send to your acquiring bank</li>
                    <li>Schedule unlimited scans on up to 20 external or internal IP addresses</li>
                    <li>PCI 'self assessment' questionnaire available via online wizard</li>
                    <li>Full access and control over the entire suite of over 30,000+ vulnerability tests</li>
                    <li>Advanced reporting capabilities</li>
                    <li>Gain PCI compliance on 20 IP addresses per quarter</li>
                    <li>Schedule unlimited on-demand scans per quarter</li>
                    <li>Additional IP Address Pack allows you to run unlimited scans over an additional number of external and internal IP addresses.</li>
                  </ul>
				  <div class="clear"></div>
                </div>
              </li>
              <li class="brand-symantec">
                <div>
                  <p>Product Specifications</p>
                  <div class="clear"></div>
                </div>
                <div>
                  <ul class="featurelist">
                    <li>Detailed reports identify security holes exposed by HackerGuardian's 30,000+ tests and contain actionable fix recommendations</li>
                    <li>Features Credit Card logo confirming your trustworthiness to take credit card details online</li>
                    <li>Now includes internal vulnerability scanning in the cloud using patent-pending technology</li>
                    <li>Assure your customers that you are authorized to accept credit cards with a high visibility trust indicator</li>
                  </ul>
				  <div class="clear"></div>
                </div>
              </li>
            </ul>
          </div>
        </div>
        @Html.Partial("_rightpanel", username) </div>
      <div class="clear"></div>
    </div>
  </div>
</div>
@section Jscripts{ 
<script type="text/javascript">
        $(document).ready(function () {
            // Mobile Menu
            $("#showmenu").click(function (e) {
                e.preventDefault();
                $("#menu").toggleClass("show");
            });
            $("#menu a").click(function (event) {
                event.preventDefault();
                if ($(this).next('ul').length) {
                    $(this).next().toggle('fast');
                    $(this).children('i:last-child').toggleClass('fa-caret-down fa-caret-left');
                }
            });
            $(document).click(function (e) {
                if (!$(e.target).is(".mobmemu, .mobmemu  *")) { $("#menu").toggleClass("hide"); $("#menu").removeClass("show"); }
            });
            $(".accordion_example").smk_Accordion();
        });
    </script> 
} 